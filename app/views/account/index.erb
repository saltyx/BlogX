
<div class="row">
  <br>
  <br>
  <br>
  <%= form_for :user , :url => {:action => 'login'} do |u| %>
    <div class="col s10 offset-s1">
      <div class="row">
        <div class="input-field">
          <i class="material-icons prefix">account_circle</i>
          <%= u.text_field :email, class: 'validate', type: 'email',id: 'i_email' %>
          <%= u.label :email, "电子邮箱", for: 'i_email' %>
        </div>
        <div class="input-field">
          <i class="material-icons prefix">android</i>
          <%= u.text_field :pwd, class: 'validate', type: 'password', id: 'pwd' %>
          <%= u.label :pwd, "密码", for: 'pwd' %>
        </div>
      </div>
    </div>
    <%= u.submit "登录", class: 'waves-effect btn col s6 offset-s3' %>
  <% end %>
</div>