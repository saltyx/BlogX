<div class="row">
  <% @blogs.each do |b| %>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= b.title %></span>
          <p>发表于：<%= b.time %></p>
        </div>
        <div class="card-action">
          <%= link_to '查看原文',{:controller => 'blog' , :action => 'index', :id => b} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
